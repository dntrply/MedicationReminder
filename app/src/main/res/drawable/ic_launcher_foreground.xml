        <path
            android:fillColor="#2196F3"
            android:pathData="M-12,-4 L12,-4 L12,4 L-12,4 Z" />
        <!-- Vertical bar of plus -->
        <path
            android:fillColor="#2196F3"
            android:pathData="M-4,-12 L4,-12 L4,12 L-4,12 Z" />
