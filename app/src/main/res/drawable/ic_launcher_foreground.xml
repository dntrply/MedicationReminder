    <path
        android:fillColor="#27AE60"
        android:pathData="M54,42 L73,42 A12,12 0 0,1 73,66 L54,66 Z" />
    <!-- Pill dividing line -->
    <path
        android:fillColor="#FFFFFF"
        android:strokeWidth="2"
